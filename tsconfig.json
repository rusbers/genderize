{
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  }
}
